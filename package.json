{
  "name": "@daneo/tools",
  "version": "1.0.4",
  "main": "dist/index.js",
  "module": "dist/tools.esm.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "repository": "git@github.com:danew/tools.git",
  "author": "Dane Wilson <git@danewilson.me>",
  "license": "MIT",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@size-limit/preset-small-lib": "^7.0.8",
    "fast-glob": "^3.2.11",
    "husky": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  },
  "peerDependencies": {
    "react": ">=16.4",
    "react-dom": ">=16.4"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "size-limit": [
    {
      "path": "dist/tsdx.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tsdx.esm.js",
      "limit": "10 KB"
    }
  ],
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  }
}
